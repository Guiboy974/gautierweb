{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset("css/home/home.css") }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

{% endblock %}

{% block main %}

    <div class="container-fluid">

        <h2 class="card-title my-3 fw-semibold text-primary-emphasis">Peinture animal </h2>
        <div class="d-flex flex-wrap">
            <div class="row flex-wrap justify-content-around">
                {% for image in images %}
                <a href="{{ asset('images/galerie/' ~ image ) }}" data-toggle="lightbox" data-gallery="example-gallery" class="col-sm-4 w-25 p-2 " >
                    <img class="img-fluid" src="{{ asset('images/galerie/' ~ image ) }}" alt="peinture">
                </a>
                {% endfor %}
            </div>
        </div>

    </div>

{% endblock %}
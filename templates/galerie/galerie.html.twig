{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset("css/home/home.css") }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

{% endblock %}


{% block main %}

    <div class="container-fluid text-center">

        
            <ul>
                <a href="{{ url('app_galerie')}}" class="card-title h1 my-3 fw-semibold text-primary-emphasis">Mes Oeuvres</a>
                <div class="d-flex flex-wrap">
                {% for categorie in categories %}
                    <li>
                        <a href="{{ url('app_galerie', {name: categorie.name, id: categorie.id}) }}" class="card-title h3 my-3 fw-semibold text-primary-emphasis">{{ categorie.name
                            }}</a>
                    </li>
                {% endfor %}
            </ul>
            <div class="row flex-wrap justify-content-around">
                {% for image in images %}
                    <img class="p-2 w-25 h-auto img-fluid" src="{{ asset('images/galerie/' ~ image.filename ) }}"
                         alt="{{
                    image.altText
                    }}" data-bs-toggle="modal" data-bs-target="#imageModal">
                {% endfor %}
            </div>
        </div>

    </div>
    <!-- Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% for image in images %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img src="{{ asset('images/galerie/' ~ image.filename ) }}" class="d-block w-100" alt="peinture">
                        </div>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}